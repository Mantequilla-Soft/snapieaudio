# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/snapieaudio
DB_NAME=snapieaudio

# IPFS Gateway Configuration (base URLs without /ipfs/ path)
# Local gateway for recently pinned files (try first for pinned_local status)
IPFS_LOCAL_GATEWAY=http://your-vps-ip:8080
# Public gateways for fallback and pinned_supernode files
IPFS_PRIMARY_GATEWAY=https://ipfs.io
IPFS_FALLBACK_GATEWAY_1=https://dweb.link
IPFS_FALLBACK_GATEWAY_2=https://cloudflare-ipfs.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Upload Configuration
UPLOAD_MAX_FILE_SIZE=52428800
UPLOAD_ALLOWED_FORMATS=mp3,m4a,ogg,webm,wav
API_KEYS=your-api-key-here,sk_demo_xxx
DEMO_API_KEY=sk_demo_xxx

# IPFS Daemon API (for uploads - localhost only)
IPFS_API_URL=http://127.0.0.1:5001

# Admin Panel
ADMIN_PASSWORD=your-secure-password
